{
  "manifest_version": 3,
  "name": "SN Launcher",
  "version": "0.0.1",
  "description": "Browser extension to boost developers on ServiceNow platform",
  "icons": {
    "16": "./assets/icon.png",
    "32": "./assets/icon.png",
    "48": "./assets/icon.png",
    "128": "./assets/icon.png"
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "js": ["scripts/content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "./assets/icon.png",
      "32": "./assets/icon.png",
      "48": "./assets/icon.png",
      "128": "./assets/icon.png"
    }
  },
  "commands": {
    "toggle-launcher": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open launcher menu"
    }
  },
  "permissions": ["tabs", "activeTab", "storage"],
  "host_permissions": ["*://*/*"]
}
